<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:Mako.TabbedTestbench;assembly=Mako.TabbedTestbench"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="Mako.TabbedTestbench.AppTabbedPage">

    <NavigationPage Title="Segmented">
        <x:Arguments>
            <local:SegmentedMeterTestPage Title="TabOne" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Clock">
        <x:Arguments>
            <local:ClockTestPage Title="TabTwo" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Three" IconImageSource="{StaticResource TabThree}">
        <x:Arguments>
            <local:MainPage Title="Three" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Four" IconImageSource="{StaticResource TabFour}">
        <x:Arguments>
            <local:MainPage Title="Four" />
        </x:Arguments>
    </NavigationPage>

</TabbedPage>
