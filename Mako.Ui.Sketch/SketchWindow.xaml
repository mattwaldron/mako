<Window x:Class="Mako.Ui.Sketch.SketchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mako.Ui.Sketch"
        mc:Ignorable="d"
        Title="EasyWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Name="LogScroll" Grid.Column="0">
            <StackPanel Name="LogPanel" Grid.Column="0" Margin="4" x:FieldModifier="public"/>
        </ScrollViewer>
        <StackPanel Name="ControlPanel" Grid.Column="1" Margin="4" x:FieldModifier="public"/>
    </Grid>
</Window>
