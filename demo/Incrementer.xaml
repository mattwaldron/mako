<UserControl x:Class="ADC.EngTools.UI.Incrementer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADC.EngTools.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="DecrementCell"/>
            <ColumnDefinition/>
            <ColumnDefinition Name="IncrementCell"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Name="DecrementButton" Click="DecrementButton_Click">-</Button>
        <Button Grid.Column="2" Name="IncrementButton" Click="IncrementButton_Click">+</Button>
        <TextBox Grid.Column="1" Name="ValueBox" TextChanged="ValueBox_TextChanged" TextAlignment="Center">0</TextBox>
    </Grid>
</UserControl>
